{
  "name": "@smilodon/core",
  "version": "1.2.3",
  "description": "High-performance native select component with extreme-scale virtualization",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/src/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rollup -c && tsc --emitDeclarationOnly --outDir dist/types",
    "dev": "rollup -c --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "size": "gzip -c dist/index.js | wc -c",
    "prepublishOnly": "npm run build",
    "release": "npm version patch && npm publish"
  },
  "keywords": [
    "select",
    "dropdown",
    "virtualization",
    "web-components",
    "custom-element",
    "performance"
  ],
  "author": "Navid Rezadoost <navidrezadoost07@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/navidrezadoost/smilodon.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/navidrezadoost/smilodon#readme",
  "bugs": {
    "url": "https://github.com/navidrezadoost/smilodon/issues"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "rollup": "^4.9.0",
    "typescript": "^5.6.2",
    "vitest": "^1.6.0",
    "jsdom": "^24.0.0"
  },
  "sideEffects": [
    "./src/components/enhanced-select.ts",
    "./src/components/native-select.ts",
    "./dist/**/*.js"
  ]
}
