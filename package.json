{
  "name": "@smilodon/monorepo",
  "version": "1.4.0",
  "description": "Smilodon monorepo: high-performance select components for React, Vue, Svelte, and Web Components.",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "playground"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "ws:build:core": "npm --workspace @smilodon/core run build",
    "build:react": "npm run build -w @smilodon/react",
    "build:vue": "npm run build -w @smilodon/vue",
    "build:svelte": "npm run build -w @smilodon/svelte",
    "build:vanilla": "npm run build -w @smilodon/vanilla",
    "test": "npm run test:unit && npm run test:contracts",
    "test:unit": "vitest run --config packages/core/vitest.config.ts",
    "test:unit:watch": "vitest --config packages/core/vitest.config.ts",
    "test:contracts": "vitest run --config tests/contracts/vitest.config.ts",
    "test:contracts:react": "vitest run tests/contracts/react.contract.spec.ts --config tests/contracts/vitest.config.ts",
    "test:contracts:vue": "vitest run tests/contracts/vue.contract.spec.ts --config tests/contracts/vitest.config.ts",
    "test:contracts:svelte": "vitest run tests/contracts/svelte.contract.spec.ts --config tests/contracts/vitest.config.ts",
    "test:contracts:vanilla": "vitest run tests/contracts/vanilla.contract.spec.ts --config tests/contracts/vitest.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:react": "playwright test --grep @react",
    "test:e2e:vue": "playwright test --grep @vue",
    "test:e2e:svelte": "playwright test --grep @svelte",
    "test:e2e:vanilla": "playwright test --grep @vanilla",
    "test:e2e:critical": "playwright test --grep @critical",
    "test:e2e:ui": "playwright test --ui",
    "test:stress": "vitest run packages/core/tests/stress.spec.ts --config packages/core/vitest.config.ts",
    "test:all": "npm run test:unit && npm run test:contracts && npm run test:e2e",
    "lint": "eslint .",
    "size": "npm run size --workspaces --if-present",
    "perf": "npm run build:core && node scripts/perf.js",
    "playwright:install": "playwright install",
    "ws:version:core": "npm version patch -w @smilodon/core",
    "ws:publish:core": "npm publish --workspace @smilodon/core",
    "ws:release:core": "npm run ws:version:core && npm run ws:publish:core"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/navidrezadoost/smilodon.git"
  },
  "bugs": {
    "url": "https://github.com/navidrezadoost/smilodon/issues"
  },
  "homepage": "https://github.com/navidrezadoost/smilodon#readme",
  "devDependencies": {
    "@playwright/test": "^1.46.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/svelte": "^5.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@testing-library/vue": "^8.1.0",
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/ui": "^1.6.0",
    "esbuild": "^0.21.0",
    "eslint": "^8.57.0",
    "jsdom": "^24.1.3",
    "playwright": "^1.46.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^4.9.0",
    "rollup-plugin-svelte": "7.2.3",
    "svelte": "^4.2.0",
    "svelte-preprocess": "6.0.3",
    "tslib": "2.8.1",
    "typescript": "^5.6.2",
    "vitest": "^1.6.0",
    "vue": "^3.4.0"
  }
}
